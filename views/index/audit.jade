extends ../layouts/default
block content
  body
    .mainContainer
      .onepcssgrid-1200
        .onerow.nopad
          .col2.nomarg.sideNavContainer(style="width:25%;")
            .sideNav#sitediv
              h3
                a#overview(href='#') Overview
              h4 Insights on:
              .container#sitediv(style="color:white;font-size:1.2em;")
               span#sites

          .col10.nomarg.content.last#dashboard_topics_wrapper(style="width:75%;")
            article.overview
              .onerow
                .col3
                  h4#target=target
                .col1
                .col6.tableContents#audit_topics
                  p Select a topic from the list above to generate insights
            article
              .onerow
                .col12
                  h1#selected_topic Select a topic
              .onerow#details
                .col3.scores
                  .cScore
                    img(src='img/cScore.png', alt='')
                    div
                      h4 Today's cscore
                      h5#today_score ?
                  .rank
                    img(src='img/rank.png', alt='')
                    div
                      h4 Today's rank
                      h5#today_rank ?
                .col6.wordCloudContainer
                  ul.hidden.cloudItems

                  p
                    em Related concepts
                  #wordCloud(style='width:530px; height:220px;')
                  p.smallText
                    | Note: The related concepts represented here are the ten words the most closly related to the topic (cosine similarity)
              .onerow
                .col12.sourceContent
                  h3 Source Content:
                  p#source_content
                  p
                    a(href='#') Visit Page
              .onerow.graph
                p.title Weekly Trends of Each Attribute's Rank:
                img(src='img/graph1.jpg', alt='')
              .onerow.graph
                p.title Attributes' Rank Variation Over the Week:
                img(src='img/graph2.jpg', alt='')
            article
              .onerow.graph
                p.title
                  | Weekly Trends of Top 10 Topics' Total Rank (based on cscore)
                img(src='img/graph3.jpg', alt='')
            article
              .onerow.graph
                p.title
                  | Weekly Trends of Top 10 Topics' Attirbutes Ranks by Topic
                img(src='img/graph4.jpg', alt='')

         
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='/js/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/js/bootstrap.min.js')
    script(src='hashes.js')
    script(src='concured_client.js')
    script(src='HTMLfactory.js')
    script(src='/js/jqcloud-1.0.4.min.js')

