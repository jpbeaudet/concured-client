extends ../layouts/home
block content
  body
   .container(style="padding:5% 15%;")
     .row
       .main
         h1
           | Please Log In, or 
           a(href='register') Sign Up
         .row
           .col-xs-6.col-sm-6.col-md-6
             a.btn.btn-lg.btn-primary.btn-block(href='#') Facebook
           .col-xs-6.col-sm-6.col-md-6
             a.btn.btn-lg.btn-info.btn-block(href='#') Google
         br
         .login-or
           hr.hr-or
           span.span-or or
         br
         form(role='form', action="/login", method="post")
           .form-group
             label(for='inputUsernameEmail') Username or email
             input#inputUsernameEmail.form-control(type='text', name="username", placeholder='Enter Username')
           .form-group
             a.pull-right(href='#') Forgot password?
             label(for='inputPassword') Password
             input#inputPassword.form-control(type='password', name="password", placeholder='Password')
           .checkbox.pull-right
             label
               input(type='checkbox')
               |             Remember me
           button.btn.btn.btn-primary(type='submit')
             | Log In
             

